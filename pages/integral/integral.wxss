/* pages/integral/integral.wxss */
page{
  width: 100%;
  height: 100%;
}
.this{
  width: 100%;
  height: 100%;
  background-color: #F4F4F4;
   position: relative;
   overflow: hidden;
}
.top{
  height: 310rpx;
  box-sizing: border-box;
  padding: 41rpx 65rpx 0 65rpx;
}
.top_now{
  width: 100%;
  height: 100%;
  overflow: hidden;
  color: #fff;
  font-size:28rpx;
}
.top_now>view{
   width: 100%;
   text-align: center;
}
.top_now_num{
  font-size:60rpx;
  margin: 57rpx 0 15rpx 0
}
.center{
  position: absolute;
  top: 310rpx;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #fff;
  box-sizing: border-box;
  padding: 0 35rpx 10rpx 35rpx;
}
.integral_des{
  text-align: center;
  font-size:28rpx;
  color: #333333;
  margin: 32rpx 0 54rpx 0;
}
.integral_des>text{
  color: #D8D8D8
}
.center_one{
 display: flex;
 align-items: center;
 justify-content: space-between;
 border-bottom: 1px solid #EEEEEE;
 padding: 30rpx 0;
}
.center_one_left{
  display: flex;
 align-items: center;
}
.center_li{
  width:8rpx;
 height:8rpx;
 border-radius: 50%;
 background:#86AED3;
 margin-right: 18rpx;
}
.center_one_left_name, .center_one_right{
  font-size:28rpx;
  color: #333333;
}
.no_notes{
  text-align: center;
  font-size:28rpx;
  color: #999999;
}