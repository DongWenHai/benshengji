page{
  background:#F4F4F4;
}
.info{
  border-top:20rpx solid #F4F4F4;
  background:#fff;
}
.info-flex{
  padding:24rpx 30rpx;
  box-sizing: border-box;
  display:flex;
  align-items: center;
  justify-content: space-between;
  position:relative;
}
.info-flex:after{
  content:'';
  display:flex;
  width:720rpx;
  height:0;
  border-bottom:1px solid #eee;
  position:absolute;
  bottom:0;
  right:0;
}
.info-label{
  font-size:28rpx;
  color:#333;
}
.info-val{
  font-size:28rpx;
  color:#cccccc;
}