page{
  background:#fff;
}
.cart-man{
  display:flex;
  align-items: center;
  justify-content: space-between;
  padding:16rpx 30rpx 16rpx 20rpx;
  box-sizing: border-box;
}
.checked-all{
  width:28rpx;
  height:28rpx;
  margin-right:18rpx;
}
.store-name{
  color:#0F0F0F;
  font-size:22rpx;
  display:flex;
  align-items: center;
}
.man-btn{
  font-size:22rpx;
  color:#333;
}
.cart-tabbar{
  width:100%;
  height:100rpx;
  background:#fff;
  position:fixed;
  bottom:0;
  left:0;
  z-index:10;
  display:flex;
  align-items: center;
  border-top:1px solid #D8D8D8;
}
.cart-cal{
  flex:1;
}
.cart-settlement{
  width:194rpx;
  height:100rpx;
  background:#AB7ED1;
  color:#fff;
  text-align: center;
  line-height:100rpx;
  font-size:32rpx;
  letter-spacing: 1px;
}
.cart-total{
  font-size:26rpx;
  padding-left:30rpx;
}
.cart-view{
  margin-bottom: 150rpx;
}

.nocart{
  width: calc(100% - 60rpx);
  text-align: center;
  color: #999999;
  font-size: 28rpx;
  padding: 0 30rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);

}

.nocart-img{
  width: 240rpx;
  height: 240rpx;
}

.nocart-item{
  margin: 35rpx 0;
}
.unsettlement{
  background:#ddd;
  pointer-events: none;
}