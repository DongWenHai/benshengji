/* pages/coupon/coupon.wxss */
page{
  background-color: rgb(243, 241, 241);
}
.coupons{
  width: 100%;
  box-sizing: border-box;
  padding: 27rpx 35rpx;
}
.coupon{
  width: 100%;
  height: 207rpx;
  display: flex;
  align-items: center;
  margin-bottom:20rpx;
}
.coupon_left{
  width: 84%;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}
.coupon_price{
  width: 45%;
  font-size: 100rpx;
  color: #258985;
  text-align: center;
}
.coupon_price>text{
  font-size: 50rpx;
}
.coupon_des{
  width: 55%;
  border-left: 1px solid #cccccc;
  box-sizing: border-box;
  padding-left: 40rpx;
}
.coupon_des>view{
  font-size:30rpx;
  color: #333333;
  line-height: 47rpx;
  font-weight: inherit;
}
.coupon_btn{
  flex: 1;
  height: 100%;
  font-size:28rpx;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
}
.no-coupon{
  width:100%;
  height:1000rpx;
  display:flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.no-coupon>image{
  width:100rpx;
  height:100rpx;
  margin-bottom:20rpx;
}
.no-coupon>view{
  font-size:28rpx;
  color:#999;
}