page{
  background:#f4f4f4;
  border-top:1px solid #eee;
}
.antifake{
  padding:30rpx 30rpx 42rpx;
  box-sizing: border-box;
  background:#fff;
}
.antifake-img{
  width:100%;
  height:300rpx;
  border-radius:8rpx;
  background:#CCCCCC;
  display:flex;
  align-items: center;
  justify-content: center;
  color:#848484;
  font-size:28rpx;
}
.antifake-input{
  width:598rpx;
  height:70rpx;
  background:#EFEFEF;
  border-radius:8rpx;
  margin:20rpx auto 0;
  display:flex;
  align-items: center;
}
.antifake-input>image{
  width:36rpx;
  height:36rpx;
  margin:0 16rpx;
}
.antifake-input>input{
  flex:1;
  line-height: 70rpx;
  font-size:28rpx;
}
.search-btn{
  width:200rpx;
  height:70rpx;
  margin:30rpx auto 0;
  background:#073818;
  color:#CBCBCB;
  font-size:28rpx;
  text-align: center;
  line-height:70rpx;
  border-radius:8rpx;
}
.search-btn:active{
  opacity:0.7;
}
.antifake-result{
  width:690rpx;
  display:flex;
  align-items: center;
  padding:20rpx;
  box-sizing: border-box;
  margin:30rpx auto;
  background:#fff;
  border-radius:8rpx;
}
.product-name{
  padding-left:20rpx;
  font-size:28rpx;
}
.msg-info{
  padding:40rpx;
  text-align: center;
  font-size:28rpx;
  color:#999;
}