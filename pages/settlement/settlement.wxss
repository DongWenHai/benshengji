page{
  padding-bottom:120rpx;
  box-sizing:border-box;
  background:#F4F4F4;
}
.address-nodata{
  display:flex;
  align-items: center;
  width:690rpx;
  margin:20rpx auto;
  padding:30rpx 30rpx;
  border-radius:12rpx;
  background:#fff;
  box-sizing: border-box;
}
.noaddress-txt{
  color:#e4393c;
  font-size:28rpx;
  margin-left:20rpx;
}
.settlement-address{
  width:690rpx;
  margin:20rpx auto;
  display:flex;
  align-items: center;
  padding:30rpx 30rpx;
  border-radius:12rpx;
  background:#fff;
  box-sizing: border-box;
}
.address-default{
  flex:1;
}
.address-icon{
  width:70rpx;
  height:70rpx;
  display:flex;
  justify-content: center;
  align-items: center;
  background:#117750;
  border-radius:50%;
  margin:0 20rpx 0 0;
}
.address-icon>image{
  width:50rpx;
  height:50rpx;
}
.ship-flex{
  display:flex;
  justify-content: space-between;
}
.ship-name{
  font-size:30rpx;
  color:#333;
}
.ship-phone{
  font-size:28rpx;
  color:#333;
}
.ship-address{
  font-size:24rpx;
  color:#666;
  margin-top:8rpx;
}
.product-item{
  display:flex;
  align-items: center;
  padding:20rpx 0;
  border-bottom:1px solid #eee;
}
.product-count{
  width:140rpx;
  display:flex;
  align-items: center;
  justify-content: flex-end;
}
.product-info{
  align-self: stretch;
  flex:1;
  display:flex;
  flex-direction: column;
  margin-left:20rpx;
}
.product-name{
  font-size:24rpx;
  color:#444;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  height:66rpx;
  line-height:33rpx;
}
.product-price{
  font-size:26rpx;
  color:#444;
  margin-top:8rpx;
}
.settlement-container{
  width:690rpx;
  margin:20rpx auto;
  background:#fff;
  border-radius:12rpx;
  padding:0 20rpx;
  box-sizing: border-box;
}
.settlement-item{
  padding:20rpx 0;
  box-sizing: border-box;
  display:flex;
  border-bottom:1px solid #eee;
}
.settlement-label{
  width:180rpx;
  color:#444;
  font-size:28rpx;
}
.settlement-txt{
  flex:1;
  display:flex;
  justify-content: flex-end;
}
.gray-val{
  color:#999;
  font-size:26rpx;
}
.ship-remark{
  width:100%;
  text-align: right;
  font-size:26rpx;
}
.pay-btn{
  width:100%;
  height:100rpx;
  line-height:100rpx;
  text-align: center;
  position:fixed;
  bottom:0;
  left:0;
  z-index:10;
  background:#258985;
  font-size:32rpx;
  color:#fff;
}
.settlement-total{
  padding:20rpx 0;
  text-align:right;
  font-size:28rpx;
  color:#444;
}
.total-money{
  color:#258985
}