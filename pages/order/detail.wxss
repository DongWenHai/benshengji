page{
  background:#fff;
}
.order-status{
  display:flex;
  background:#CA91FA;
  color:#fff;
  padding:18rpx 0 24rpx;
}
.order-status-icon{
  width:94rpx;
}
.order-status-icon>image{
  width:38rpx;
  height:38rpx;
  margin-left:34rpx;
}
.order-status-content{
  flex:1;
  padding-right:30rpx;
  box-sizing: border-box;
}
.order-status-txt{
  font-size:28rpx;
  margin-bottom:18rpx;
  color:#fff;
}
.order-status-deliver{
  display:flex;
}
.order-deliver-new{
  flex:1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.order-ship{
  display:flex;
  padding:30rpx 0;
  border-bottom:20rpx solid #F7F7F7;
}
.order-ship-icon{
  width:94rpx;
}
.order-ship-icon>image{
  width:38rpx;
  height:38rpx;
  margin-left:34rpx;
}
.order-ship-content{
  flex:1;
  padding-right:30rpx;
  box-sizing: border-box;
}
.order-ship-user{
  display:flex;
  justify-content: space-between;
  margin-bottom:20rpx;
}
.order-ship-name,.order-ship-phone{
  font-size:28rpx;
  color:#333;
}
.order-ship-address{
  font-size:28rpx;
  color:#999;
}
.order-products{
  border-bottom:20rpx solid #F7F7F7;
  background:#fff;
}
.order-products-item{
  display:flex;
  padding:22rpx 30rpx 0;
  box-sizing: border-box;
}
.product-img{
  border:1px solid #EEEEEE;
  margin-right:16rpx;
}
.product-info{
  flex:1;
  box-sizing: border-box;
  border-bottom:1px solid #EEEEEE;
  display:flex;
  padding-bottom:20rpx;
}
.product-count{
  padding-left:30rpx;
  align-self: center;
  font-size:28rpx;
  color:#333;
}
.product-info-box{
  flex:1;
}
.product-name{
  font-size:24rpx;
  color:#999;
  line-height:33rpx;
  height:66rpx;
}
.product-price{
  font-size:24rpx;
  margin-top:8rpx;
  color:#333;
}
.product-total{
  padding:8rpx 0 24rpx;
}
.product-total-item{
  height:50rpx;
  display:flex;
  justify-content: space-between;
  align-items: center;
  padding:0 30rpx;
  box-sizing: border-box;
}
.product-total-label,.product-total-value{
  color:#999;
  font-size:24rpx;
}
.order-info{
  padding:24rpx 30rpx;
  box-sizing: border-box;
}
.order-info-item{
  font-size:28rpx;
  color:#333;
  margin-bottom:20rpx;
  display:flex;
  align-items: center;
}
.order-num-copy{
  width:70rpx;
  height:34rpx;
  text-align: center;
  align-items: center;
  line-height:34rpx;
  color:#333;
  font-size:22rpx;
  border:1px solid #979797;
  border-radius:4rpx;
  margin-left:20rpx;
}
.order-footer{
  width:100%;
  height:110rpx;
  background:#fff;
  padding-right:40rpx;
  box-sizing: border-box;
  border-top:1px solid #EEEEEE;
  position:fixed;
  bottom:0;
  z-index:0;
  display:flex;
  align-items: center;
  justify-content: flex-end;
}
.order-btn{
  padding:0 32rpx;
  height:60rpx;
  line-height:60rpx;
  font-size:24rpx;
  color:#F7A600;
  margin-left:20rpx;
  border:1px solid #F7A600;
  border-radius:30rpx;
}