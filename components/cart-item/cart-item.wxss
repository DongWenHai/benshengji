.cart-item-container{
  position:relative;
  background:#fff;
  padding-bottom:30rpx;
}
.cart-item{
  width:100%;
  padding:30rpx 30rpx 0rpx 20rpx;
  box-sizing: border-box;
  display:flex;
  align-items: center;
  position:relative;
  background:#fff;
}
.cart-item-container:after{
  content:'';
  display:block;
  width:670rpx;
  height:0;
  border-bottom:1px solid #D8D8D8;
  position:absolute;
  bottom:0;
  right:30rpx;
}
.cart-select-status,.icon-select{
  width:28rpx;
  height:28rpx;
}
.cart-img{
  margin-left:18rpx;
}
.cart-item-info{
  flex: 1;
  align-self: stretch;
  padding-left:24rpx;
  box-sizing: border-box;
  display:flex;
  flex-direction: column;
  position:relative;
}
.cart-pname{
  font-size:28rpx;
  letter-spacing: 1px;
  line-height: 40rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.cart-pattr{
  font-size:24rpx;
  color:#999;
  margin-top:16rpx;
}
.cart-price{
  flex:1;
  display:flex;
  align-items: flex-end;
  font-size:24rpx;
}
.cart-input{
  position:absolute;
  bottom:0;
  right:0;
}
.cart-activity-barge{
  padding-left:50rpx;
  margin-top:20rpx;
  display:flex;
  align-items: center;
  box-sizing: border-box;
}
.cart-activoty-two{
  width:670rpx;
  height:54rpx;
  border-radius:8rpx;
  padding:0 10rpx;
  box-sizing: border-box;
  background:#fff1f2;
  color:#fd222c;
  line-height:54rpx;
  font-size:24rpx;
}