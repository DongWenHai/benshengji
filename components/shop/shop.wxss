.shop{
  width:100%;
  height:100%;
  position:fixed;
  top:0;
  left:0;
  z-index:999;
}
.mask{
  width:100%;
  height:100%;
  background:rgba(0,0,0,0.6);
  position:absolute;
  top:0;
  left:0;
  opacity:0;
}
.shop-container{
  background:#fff;
  position:absolute;
  bottom:0;
  left:0;
  width:100%;
  transform: translateY(110%);
}
.shop-product{
  padding:20rpx 30rpx;
  position:relative;
  height:160rpx;
  box-sizing: border-box;
  overflow: visible !important;
}
.close-modal{
  position:absolute;
  top:10rpx;
  right:30rpx;
  color:#999;
  font-size:36rpx;
  padding:0 20rpx;
}
.shop-product:after{
  content:'';
  display:block;
  width:690rpx;
  height:0;
  border-bottom:1px solid #eee;
  position:absolute;
  left:30rpx;
  bottom:0;
}
.product-img{
  width:170rpx;
  height:170rpx;
  background:#fff;
  position:absolute;
  bottom:20rpx;
  left:30rpx;
  border-radius:8rpx;
  box-shadow: 0 0 10rpx 0 rgba(50,50,50,0.2);
}
.product-info{
  padding-left:220rpx;
}
.product-price{
  font-size:36rpx;
  font-weight:bold;
  color:red;
}
.product-stock{
  font-size:28rpx;
  color:#999;
  margin-top:10rpx;
}
.product-count{
  display:flex;
  padding:40rpx 30rpx;
  box-sizing: border-box;
  justify-content: space-between;
  align-items: center;
}
.product-label{
  font-size:28rpx;
  color:#333;
}
.count-control{
  display:flex;
  align-items: center;
  border:1px solid #eee;
  border-radius:4rpx;
}
.count-reduce{
  width:56rpx;
  height:56rpx;
  position:relative;
}
.count-reduce:before{
  content:'';
  display:block;
  width:30rpx;
  height:1px ;
  background:#e2e2e2;
  position:absolute;
  left:13rpx;
  top:26rpx;
}
.count-add{
  width:56rpx;
  height:56rpx;
  position:relative;
}
.count-add:before{
  content:'';
  display:block;
  width:30rpx;
  height:1px ;
  background:#333;
  position:absolute;
  left:13rpx;
  top:26rpx;
}
.count-add:after{
  content:'';
  display:block;
  height:30rpx;
  width:1px ;
  background:#333;
  position:absolute;
  top:13rpx;
  left:26rpx;
}
.count-input{
  height:56rpx;
  width:56rpx;
  line-height:56rpx;
  text-align: center;
  font-size:24rpx;
  border-left:1px solid #eee;
  border-right:1px solid #eee;
}
.shop-operate{
  height:100rpx;
  display:flex;
}
.shop-btn{
  flex:1;
  height:100rpx;
  line-height:100rpx;
  text-align: center;
  font-size:30rpx;
  color:#fff;
}
.addcart{
  background:#FFB571;
}
.shopping{
  background:#F52E27;
}
.nostock{
  background:rgb(187, 187, 187);
}