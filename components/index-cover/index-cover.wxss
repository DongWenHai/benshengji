.index-cover{
  width:100rpx;
  height:100rpx;
  background:rgba(0,0,0,0.7);
  border-radius:50%;
  display:flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  position:fixed;
  bottom:80rpx;
  right:20rpx;
  z-index:10;
}
.index-cover>image{
  width:50rpx;
  height:50rpx;
}
.index-cover>view{
  font-size:20rpx;
  color:#fff;
}